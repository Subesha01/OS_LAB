5.b.fifo page replacement
#include <iostream>
#include <vector>
using namespace std;

int main() {
    int i, j, n, no, k, avail, count = 0;
    vector<int> a(50);
    vector<int> frame(10, -1);

    cout << "FIFO PAGE REPLACEMENT ALGORITHM:" << endl;
    cout << "\nENTER THE NUMBER OF PAGES:\n";
    cin >> n;
    cout << "\nENTER THE PAGE NUMBER:\n";
    for (i = 0; i < n; i++) {
        cin >> a[i];
    }
    cout << "\nENTER THE NUMBER OF FRAMES: ";
    cin >> no;
    
    j = 0;
    cout << "Reg page\tFrames" << endl;
    for (i = 0; i < n; i++) {
        cout << a[i] << "\t\t";
        avail = 0;

        for (k = 0; k < no; k++) {
            if (frame[k] == a[i]) {
                avail = 1;
                break;
            }
        }
        if (avail == 0) {
            frame[j] = a[i];
            j = (j + 1) % no;
            count++;
            for (k = 0; k < no; k++) {
                if (frame[k] != -1)
                    cout << frame[k] << "\t";
                else
                    cout << "-\t";
            }
        }
        cout << endl;
    }
    cout << "\nTotal number of Page Faults: " << count << endl;
    return 0;
}
