6)b)SJF Scheduling

#include <iostream>
#include <algorithm>
using namespace std;

int main() {
    int n;
    cin >> n;
    int bt[n], wt[n], tat[n];
    for (int i = 0; i < n; i++) {
        cin >> bt[i];
    }
    sort(bt, bt + n);
    wt[0] = 0;
    tat[0] = bt[0];
    for (int i = 1; i < n; i++) {
        wt[i] = wt[i - 1] + bt[i - 1];
        tat[i] = wt[i] + bt[i];
    }
    cout << "Process\twaitTime\ttat\n";
    double tot_wt = 0, tot_tat = 0;
    for (int i = 0; i < n; i++) {
        cout << i + 1 << "\t" << wt[i] << "\t\t" << tat[i] << endl;
        tot_wt += wt[i];
        tot_tat += tat[i];
    }
    cout << tot_wt / n <<endl;
    cout<< tot_tat / n << endl;
}

