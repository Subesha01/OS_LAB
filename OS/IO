#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    int disk[n];
    for(int i=0;i<n;i++){
        cin>>disk[i];
    }
    int head;
    cin>>head;
    int tot=0,move=0;
    for(int i=0;i<n;i++){
        tot+=abs(head-disk[i]);
        head=disk[i];
        move++;
    }
    cout<<tot<<endl;
    cout<<move;    
}

