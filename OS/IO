5)b),10)b)i)FIFO Page Replacement Algorithm

#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    int a[50],b[10];
    for(int i=0;i<n;i++){
        cin>>a[i];
    }
    int m;
    cin>>m;
    for(int i=0;i<m;i++){
        b[i]=-1;
    }
    int count=0,avail,j=0;
    for(int i=0;i<n;i++){
        cout<<a[i]<<"\t";
        avail=0;
        for(int k=0;k<m;k++){
            if(b[k]==a[i]){
                avail=1;
                break;
            }
        }
        if(avail==0){
            b[j]=a[i];
            j=(j+1)%m;
            count++;
        }
        for(int i=0;i<m;i++){
            cout<<b[i]<<" ";
        }
        cout<<endl;
    }
    cout<<endl<<count;
}

