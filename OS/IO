2)b)FIFO CPU Scheduling

#include <iostream>
using namespace std;
int main() {
    int n;
    cin >> n;
    int bt[n], tat[n], wt[n];
    for (int i = 0; i < n; i++) {
        cin >> bt[i];
    }
    tat[0] = bt[0];
    wt[0] = 0;
    for (int i = 1; i < n; i++) {
        wt[i] = wt[i - 1] + bt[i - 1];
        tat[i] = wt[i] + bt[i];
    }
    double total_tat , total_wt ;
    for (int i = 0; i < n; i++) {
        total_tat += tat[i];
        total_wt += wt[i];
    }
    cout << "Burst Time\tTurn Around Time\tWait Time\n";
    for (int i = 0; i < n; i++) {
        cout << bt[i] << "\t\t" << tat[i] << "\t\t\t" << wt[i] << "\n";
    }
    cout << "Average Turn Around Time = " << total_tat / n << "\n";
    cout << "Average Waiting Time = " << total_wt / n << "\n";

}

